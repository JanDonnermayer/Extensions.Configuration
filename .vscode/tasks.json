{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build.resolvers",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/Extensions.Configuration.Resolver/Extensions.Configuration.Resolver.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "-c:Release"
            ]
        },
        {
            "label": "test.resolvers",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "${workspaceFolder}/src/Extensions.Configuration.Resolver/Extensions.Configuration.Resolver.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "-c:Release"
            ]
        },
        {
            "label": "build.builder.objects",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/Extensions.Configuration.Sources.Object/Extensions.Configuration.Sources.Object.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "-c:Release"
            ]
        },
        {
            "label": "test.builder.objects",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "${workspaceFolder}/src/Extensions.Configuration.Resolver/Extensions.Configuration.Resolver.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "-c:Release"
            ]
        },
        {
            "label": "nuget.pack",
            "command": "nuget",
            "type": "process",
            "args": [
                "pack",
                "${workspaceFolder}/.nuget/Extensions.Configuration.${input:packageVersion}.nuspec",
                "-OutputDirectory",
                "${workspaceFolder}/.nuget",
                "-IncludeReferencedProjects"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "nuget.pack.resolvers",
            "command": "nuget",
            "type": "process",
            "args": [
                "pack",
                "${workspaceFolder}/.nuget/Extensions.Configuration.Resolver.${input:packageVersion}.nuspec",
                "-OutputDirectory",
                "${workspaceFolder}/.nuget"
            ],
            "problemMatcher": "$msCompile",
            "dependsOn": [
                "build.resolvers",
                "test.resolvers"
            ]
        },
        {
            "label": "dotnet.pack.local.resolvers",
            "command": "dotnet",
            "type": "process",
            "args": [
                "pack",
                "${workspaceFolder}/src/Extensions.Configuration.Resolver/Extensions.Configuration.Resolver.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "-c:Release",
                "-p:PackageVersion=${input:packageVersion}",
                "-p:AssemblyVersion=${input:packageVersion}",
                "-o:C:/Users/${env:USERNAME}/.nuget/packages.local/Extensions.Configuration.Resolver"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "nuget.pack.builder.objects",
            "command": "nuget",
            "type": "process",
            "args": [
                "pack",
                "${workspaceFolder}/.nuget/Extensions.Configuration.Sources.Object.${input:packageVersion}.nuspec",
                "-OutputDirectory",
                "${workspaceFolder}/.nuget"
            ],
            "problemMatcher": "$msCompile",
            "dependsOn": [
                "build.builder.objects",
                "test.builder.objects"
            ]
        },
        {
            "label": "dotnet.pack.local.builder.objects",
            "command": "dotnet",
            "type": "process",
            "args": [
                "pack",
                "${workspaceFolder}/src/Extensions.Configuration.Sources.Object/Extensions.Configuration.Sources.Object.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "-c:Release",
                "-p:PackageVersion=${input:packageVersion}",
                "-p:AssemblyVersion=${input:packageVersion}",
                "-o:C:/Users/${env:USERNAME}/.nuget/packages.local/Extensions.Configuration.Sources.Object"
            ],
            "problemMatcher": "$msCompile"
        }
    ],
    "inputs": [
        {
            "type": "promptString",
            "id": "packageVersion",
            "description": "Specify package version.",
            "default": "0.0.0"
        }
    ]
}